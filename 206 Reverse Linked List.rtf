        */\
        \
        //way-2\
        if(!head || !head->next)\
            return head;\
            \
        ListNode *last=head;\
        ListNode *p=last->next;\
        ListNode *pre=p->next;\
        \
        while(p)\
        \{\
            last->next=pre;\
            p->next=head;\
            head=p;\
            p=last->next;\
            if(p)\
                pre=p->next;\
        \}\
        return head;\
    \}\
\};\
